<header class="header1">
  <!-- Header desktop -->
  <div class="container-menu-header">
    <div class="wrap_header">
      <!-- Logo -->
      <a href="/" class="logo">
        <img src="/users/images/icons/logo.png" alt="IMG-LOGO" />
      </a>

      <!-- Menu -->
      <div class="wrap_menu">
        <nav class="menu">
          <ul class="main_menu">
            <li>
              <a href="/">Home</a>
            </li>

            <li>
              <a href="/products/men">Men</a>
            </li>
            <li>
              <a href="/products/women">Women</a>
            </li>

            <li>
              <a href="/products/kids">Kids</a>
            </li>

            <% if(!name) {%>
            <li>
              <a href="/users/signup">SignUp</a>
            </li>

            <li>
              <a href="/users/login">SignIn</a>
            </li>
            <%}%>
          </ul>
        </nav>
      </div>

      <!-- Header Icon -->
      <% if(name) { %>
      <div class="header-icons">
        <nav class="navbar navbar-expand-sm">
          <a class="navbar-brand" href="#">
            <span style="font-size: 1rem"><%= name %></span>
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbar-list-4"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbar-list-4">
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  id="navbarDropdownMenuLink"
                  role="button"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  <img
                    src="/users/images/users/<%= image %>"
                    width="40"
                    height="40"
                    class="rounded-circle"
                    style="object-fit: cover"
                  />
                </a>
                <div
                  class="dropdown-menu"
                  aria-labelledby="navbarDropdownMenuLink"
                >
                  <a class="dropdown-item" href="/users/profile/<%= id%>"
                    >Dashboard</a
                  >
                  <a class="dropdown-item" href="/users/profile/edit/<%= id %>"
                    >Edit Profile</a
                  >
                  <a class="dropdown-item" href="/users/orders/<%= id %>"
                    >Orders</a
                  >
                  <a class="dropdown-item" href="/users/logout">Log Out</a>
                </div>
              </li>
            </ul>
          </div>
        </nav>

        <span class="linedivide1"></span>
        <a
          href="/users/wishlist/<%=id%>"
          class="header-wrapicon2"
          style="margin-right: 1.5rem; height: 1.5rem"
        >
          <img
            src="/users/images/icons/favorites.svg"
            class="header-icon1 js-show-header-dropdown"
            alt="ICON"
          />

          <span class="header-icons-noti" id="wishListTxt"
            ><%= wishListCount %></span
          >
        </a>

        <a href="/users/cart/<%= id%>" class="header-wrapicon2">
          <img
            src="/users/images/icons/icon-header-02.png"
            class="header-icon1 js-show-header-dropdown"
            alt="ICON"
          />

          <span class="header-icons-noti" id="cartText"><%= cartCount %></span>
        </a>
      </div>
      <% }%>
    </div>
  </div>

  <!-- Header Mobile -->
  <div class="wrap_header_mobile">
    <!-- Logo moblie -->
    <a href="/" class="logo-mobile">
      <img src="/users/images/icons/logo.png" alt="IMG-LOGO" />
    </a>

    <!-- Button show menu -->
    <div class="btn-show-menu">
      <!-- Header Icon mobile -->
      <div class="header-icons-mobile">
        <% if(name){%>
        <a href="#" class="header-wrapicon1 dis-block">
          <img
            src="/users/images/users/<%= image %>"
            class="header-icon1"
            alt="ICON"
            style="border-radius: 50%"
          />
        </a>
        <span class="linedivide2"></span>

        <div class="header-wrapicon2">
          <a
            href="/users/wishlist/<%=id%>"
            class="header-wrapicon2"
            style="margin-right: 1.5rem; height: 1.5rem"
          >
            <img
              src="/users/images/icons/favorites.svg"
              class="header-icon1 js-show-header-dropdown"
              alt="ICON"
            />

            <span class="header-icons-noti" id="wishListTxt"
              ><%= wishListCount %></span
            >
          </a>

          <a href="/users/cart/<%= id%>" class="header-wrapicon2">
            <img
              src="/users/images/icons/icon-header-02.png"
              class="header-icon1 js-show-header-dropdown"
              alt="ICON"
            />

            <span class="header-icons-noti" id="cartText"
              ><%= cartCount %></span
            >
          </a>
        </div>
        <%}%>
      </div>

      <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
        <span class="hamburger-box">
          <span class="hamburger-inner"></span>
        </span>
      </div>
    </div>
  </div>

  <!-- Menu Mobile -->
  <div class="wrap-side-menu">
    <nav class="side-menu">
      <ul class="main-menu">
        <li class="item-topbar-mobile p-l-10">
          <div class="topbar-social-mobile">
            <a href="#" class="topbar-social-item fa fa-facebook"></a>
            <a href="#" class="topbar-social-item fa fa-instagram"></a>
            <a href="#" class="topbar-social-item fa fa-pinterest-p"></a>
            <a href="#" class="topbar-social-item fa fa-snapchat-ghost"></a>
            <a href="#" class="topbar-social-item fa fa-youtube-play"></a>
          </div>
        </li>

        <li class="item-menu-mobile">
          <a href="/">Home</a>
          <i class="arrow-main-menu" aria-hidden="true"></i>
        </li>

        <li class="item-menu-mobile">
          <a href="/products/men">Men</a>
        </li>

        <li class="item-menu-mobile">
          <a href="/products/women">Women</a>
        </li>

        <li class="item-menu-mobile">
          <a href="/products/kids">Kids</a>
        </li>
        <% if(name){%>
        <li class="item-menu-mobile">
          <a href="/users/profile/<%=id%>">Dashboard</a>
        </li>

        <li class="item-menu-mobile">
          <a href="/users/orders/<%=id%>">Orders</a>
        </li>
        <li class="item-menu-mobile">
          <a href="/users/logout">Logout</a>
        </li>
        <%}else{%>
        <li class="item-menu-mobile">
          <a href="/users/signup%>">Signup</a>
        </li>
        <li class="item-menu-mobile">
          <a href="/users/login">Signin</a>
        </li>
        <%}%>
      </ul>
    </nav>
  </div>
</header>
