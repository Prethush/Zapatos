  <body class="animsition">
    <!-- Header -->

    <%- include('partials/header.ejs') %>

    <!-- Dashboard -->
    <section>
      <div class="container" style="padding: 3rem 2rem; min-height: 60vh">
        <div class="accordion accordion-flush" id="accordionFlushExample">
          <% addressArr.forEach((a,i) =>{%>
          <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingOne">
              <button
                class="accordion-button collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#flush-collapseOne<%=i%>"
                aria-expanded="false"
                aria-controls="flush-collapseOne"
                style="
                  background-color: cadetblue;
                  color: #fff;
                  font-weight: 700;
                  margin-bottom: 1rem;
                "
              >
                Address <%= i + 1 %>
              </button>
            </h2>
            <div
              id="flush-collapseOne<%=i%>"
              class="accordion-collapse collapse"
              aria-labelledby="flush-headingOne"
              data-bs-parent="#accordionFlushExample"
            >
              <div class="accordion-body">
                <h6>City: <%= a.city%></h6>
                <h6>State: <%= a.state%></h6>
                <h6>Address: <%= a.address%></h6>
                <h6>Mobile No: <%= a.phone%></h6>
                <h6>Pincode: <%= a.pincode%></h6>
                <div style="margin: 1rem 0">
                  <a
                    href="/users/profile/editAddress/<%= a.id%>"
                    style="
                      text-decoration: none;
                      padding: 0.4rem 0.8rem;
                      background-color: rgb(74, 71, 255);
                      color: #fff;
                      font-weight: 700;
                      border-radius: 0.3rem;
                    "
                    >Edit</a
                  >
                  <a
                    href="/users/profile/deleteAddress/<%= a.id%>"
                    style="
                      text-decoration: none;
                      padding: 0.4rem 0.8rem;
                      background-color: rgb(251, 93, 65);
                      color: #fff;
                      font-weight: 700;
                      border-radius: 0.3rem;
                    "
                    >Delete</a
                  >
                </div>
              </div>
            </div>
            <%})%>
            <div>
              <a
                href="/users/profile/addAddress/<%=id%>"
                style="
                  text-decoration: none;
                  padding: 0.4rem 0.8rem;
                  background-color: firebrick;
                  color: #fff;
                  font-weight: 700;
                  border-radius: 0.3rem;
                "
                >Add New Address</a
              >
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

    <!-- Back to top -->
    <div class="btn-back-to-top bg0-hov" id="myBtn">
      <span class="symbol-btn-back-to-top">
        <i class="fa fa-angle-double-up" aria-hidden="true"></i>
      </span>
    </div>

