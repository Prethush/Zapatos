<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="Colorlib Templates" />
    <meta name="author" content="Colorlib" />
    <meta name="keywords" content="Colorlib Templates" />

    <!-- Title Page-->
    <title>Product Add Form</title>

    <!-- Icons font CSS-->
    <!-- <link
      href="/admin/assets/node_modules/morrisjs/morris.css"
      rel="stylesheet"
    /> -->
    <link rel="stylesheet" href="/admin/dist/css/carousel.css">
    <link href="/admin/dist/css/pages/ecommerce.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="/admin/dist/css/style.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body class="skin-default fixed-layout">
    <div class="preloader">
      <div class="loader">
        <div class="loader__figure"></div>
        <p class="loader__label">Elite admin</p>
      </div>
    </div>
    <div class="main-wrapper">
      <%-include('partials/header')%> <%-include('partials/sidebar')%>
      <div class="page-wrapper">
        <div class="container-fluid">
          <div class="row page-titles">
            <div class="col-md-5 align-self-center">
              <h4 class="text-themecolor">Products</h4>
            </div>
            <div class="col-md-7 align-self-center text-right">
              <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="javascript:void(0)">Home</a>
                  </li>
                  <li class="breadcrumb-item active">Products</li>
                </ol>
              </div>
            </div>
          </div>
          <div class="row">
            <!-- Column -->
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <h1 class="mb-4 font-weight-bold"><%= product.name %></h1>
                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                      <div class="white-box text-center">
                        <div class="container" style="width:">
  
                        <div class="slide-container" >
                         <% product.images.forEach((m,i) => {%>
                          <%if(i==0){%>
                             <img class="slide active" style="object-fit: cover;" src="/admin/products/<%=m.img%>"/>
                       
                          <%}else{%>
                             <img class="slide" style="object-fit: cover;" src="/admin/products/<%=m.img%>"/>
                          <%}%>
                         <%})%>
                        </div>
                        <div class="nav-btn">
                          <div class="control left hidden">&#9668;</div>
                          <div class="control right">&#9658;</div>
                        </div>
                        </div>
                        <div class="nav-indicator">
                          <div class="active indicator"></div>
                          <div class="indicator"></div>
                          <div class="indicator"></div>
                           <div class="indicator"></div>
                        </div>

                      </div>
                      <div class="d-flex justify-content-center mt-4">
                        <a href="/admin/product/edit/<%= product.id%>" class="mr-4" style="text-transform: uppercase; background-color: rgb(66, 66, 192); color: #fff; padding: .5rem 1.3rem; border-radius: .3rem; font-weight: 600;">Edit</a>
                        <a href="/admin/product/delete/<%=product.id%>" style="text-transform: uppercase; background-color: rgb(200, 65, 60); color: #fff; padding: .5rem 1.3rem; border-radius: .3rem; font-weight: 600;">Delete</a>
                           <a href="/admin/product/add_variant/<%=product.id%>" style="text-transform: uppercase; background-color: rgb(66, 66, 192); color: #fff; padding: .5rem 1.3rem; border-radius: .3rem; font-weight: 600;">Add Variants</a>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                      <h2 class="box-title m-t-40 font-weight-bold">Product description</h2>
                      <p ><%= product.description %></p>
                      <!-- <p class="font-weight-bold"><%=product.subCategory%>'s Shoes</p> -->
                      <h2 class="m-t-40">Rs. <%= product.price %></h2>
                        <div class="d-flex">
                        <% similarProducts.forEach((s, i) => {%>
                          <% s.images.forEach((m, i) => { %>
                          <%if(i==0) {%>
                          <div style="width: 5rem;height: 5rem; margin-right: .5rem;">
                             <a href="/admin/product/<%=s.id%>"> <img src="/admin/products/<%=m.img%>" style="object-fit: cover;" alt=""></a>
                          </div>
                          <%}%>
                          <% }) %>
                        <% }) %>
                      </div>
                      <div class="mt-4">
                        <h4 class="font-weight-bold">Available Sizes</h4>
                        <div class="d-flex">
                          <% allSizes.forEach((a,i) => { %>
                           <div class="d-flex flex-column" style="margin-top: .8rem; margin-left: .5rem; ">
                            <span class="size_text"></span>
                            <span class="sizes" href="" style="background-color: rgb(204, 196, 196); padding: .5rem 1.2rem; color: black;"><%= a%></span>
                           </div>
                          <% }) %>
                        </div>
                      </div>
                      <div class="mt-4">
                         <h4 class="font-weight-bold">Stocks Information</h4>
                         <div>
                           <table class="table">
                            <thead>
                              <tr>
                                <th scope="col">#</th>
                                <th scope="col">Size</th>
                                <th scope="col">Stock</th>
                              </tr>
                            </thead>
                            <tbody>
                             <% allSizes.forEach((s, i) => { %>
                               <tr>
                                <th scope="row"><%= i+1 %></th>
                                <td><%= s %></td>
                                <td><%= allStocks[i] %></td>
                              </tr>
                             <% }) %>
                            </tbody>
                            </table>
                            </div>
                      </div>
                    </div>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%-include('partials/footer')%>
    <script src="/admin/assets/node_modules2/jquery/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="/admin/assets/node_modules2/popper/popper.min.js"></script>
    <script src="/admin/assets/node_modules2/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="/admin/dist/js/perfect-scrollbar.jquery.min.js"></script>
    <!--Wave Effects -->
    <script src="/admin/dist/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="/admin/dist/js/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="/admin/assets/node_modules2/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <script src="/admin/assets/node_modules2/sparkline/jquery.sparkline.min.js"></script>
    <!--Custom JavaScript -->
    <script src="/admin/dist/js/custom.min.js"></script>
    <script src="/admin/assets/node_modules2/jquery-sparkline/jquery.sparkline.min.js"></script>
    <!-- ============================================================== -->
    <!-- This page plugins -->
    <!-- ============================================================== -->
    <!--morris JavaScript -->
    <script src="/admin/assets/node_modules2/raphael/raphael-min.js"></script>
    <script src="/admin/assets/node_modules2/morrisjs/morris.min.js"></script>
    <!--Custom JavaScript -->
    <script src="/admin/dist/js/ecom-dashboard.js"></script>
    <script src="/admin/dist/js/carousel.js"></script>
    <script src="/admin/dist/size.js"></script>
  </body>
  </body>
</html>
