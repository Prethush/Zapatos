<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Orders</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="/users/images/icons/favicon.png" />
    <%- include('layout/layout')%>
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.dataTables.min.css"
    />

    <!--===============================================================================================-->
  </head>
  <body class="animsition">
    <!-- Header -->

    <%- include('partials/header.ejs') %>

    <!-- Content page -->
    <div class="container-fluid" style="padding: 0 5rem 3rem 5rem">
      <h1 class="text-center my-4" style="font-weight: 700">Orders</h1>
      <div class="table-responsive">
        <table class="table" id="tableContent">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Product Image</th>
              <th scope="col">Product Name</th>
              <th scope="col">Size</th>
              <th scope="col">Price</th>
              <th scope="col">Order Status</th>
              <th scope="col">Options</th>
              <th scope="col">Options</th>
            </tr>
          </thead>
          <tbody>
            <% count = 0%> <% orders.forEach((or, index) => {%> <%
            or.orderItems.forEach((item, i) => {%>
            <tr>
              <th scope="row"><%= ++count %></th>

              <td>
                <img
                  src="/admin/products/<%= item.variant.images[0].img %>"
                  alt="<%= item.variant.name%>"
                  style="width: 5rem; height: 5rem"
                />
              </td>
              <td><%= item.variant.name%></td>
              <td><%= item.size%></td>
              <td>Rs. <%= item.product.price %></td>
              <td><%= item.orderStatus %></td>

              <td>
                <% if(item.orderStatus === "processing"){%>
                <a
                  href="/users/orders/cancel/<%=or.id%>/?quantity=<%= item.quantity%>&objectId=<%=item.id%>&size=<%=item.size%>&variantId=<%=item.variant.id%>"
                  style="
                    background-color: rgb(250, 42, 42);
                    padding: 0.5rem 0.7rem;
                    color: #fff;
                    border-radius: 0.3rem;
                  "
                >
                  Cancel Order
                </a>
                <%}else{%>
                <a
                  href="/users/orders/cancel/<%=or.id%>/?quantity=<%= item.quantity%>&objectId=<%=item.id%>&size=<%=item.size%>&variantId=<%=item.variant.id%>"
                  style="
                    background-color: #cccccc;
                    padding: 0.5rem 0.7rem;
                    color: #fff;
                    border-radius: 0.3rem;
                    pointer-events: none;
                  "
                >
                  Cancel Order
                </a>
                <%}%>
              </td>
              <td>
                <a
                  href="/users/order-details/<%=item.id%>?orderId=<%= or.id%>&productId=<%=item.product.id%>&variantId=<%=item.variant.id%>"
                  style="
                    background-color: rgb(92, 172, 246);
                    color: #fff;
                    padding: 0.5rem 0.8rem;
                    border-radius: 0.3rem;
                    font-weight: 600;
                  "
                  >Details</a
                >
              </td>
            </tr>
            <%})%> <%})%>
          </tbody>
        </table>
      </div>
    </div>
    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

    <!-- Back to top -->
    <div class="btn-back-to-top bg0-hov" id="myBtn">
      <span class="symbol-btn-back-to-top">
        <i class="fa fa-angle-double-up" aria-hidden="true"></i>
      </span>
    </div>

    <!-- Container Selection1 -->
    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script
      type="text/javascript"
      src="/users/vendor/jquery/jquery-3.2.1.min.js"
    ></script>
    <!--===============================================================================================-->
    <script
      type="text/javascript"
      src="/users/vendor/animsition/js/animsition.min.js"
    ></script>
    <!--===============================================================================================-->
    <script
      type="text/javascript"
      src="/users/vendor/bootstrap/js/popper.js"
    ></script>
    <script
      type="text/javascript"
      src="/users/vendor/bootstrap/js/bootstrap.min.js"
    ></script>
    <!--===============================================================================================-->
    <script
      type="text/javascript"
      src="/users/vendor/select2/select2.min.js"
    ></script>
    <script type="text/javascript">
      $(".selection-1").select2({
        minimumResultsForSearch: 20,
        dropdownParent: $("#dropDownSelect1"),
      });
    </script>
    <!--===============================================================================================-->
    <script
      type="text/javascript"
      src="/users/vendor/slick/slick.min.js"
    ></script>
    <script type="text/javascript" src="/users/js/slick-custom.js"></script>
    <!--===============================================================================================-->
    <script
      type="text/javascript"
      src="/users/vendor/countdowntime/countdowntime.js"
    ></script>
    <!--===============================================================================================-->
    <script
      type="text/javascript"
      src="/users/vendor/lightbox2/js/lightbox.min.js"
    ></script>
    <!--===============================================================================================-->
    <script
      type="text/javascript"
      src="/users/vendor/sweetalert/sweetalert.min.js"
    ></script>
    <script
      type="text/javascript"
      charset="utf8"
      src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"
    ></script>
    <script type="text/javascript">
      $(".block2-btn-addcart").each(function () {
        var nameProduct = $(this)
          .parent()
          .parent()
          .parent()
          .find(".block2-name")
          .html();
        $(this).on("click", function () {
          swal(nameProduct, "is added to cart !", "success");
        });
      });

      $(".block2-btn-addwishlist").each(function () {
        var nameProduct = $(this)
          .parent()
          .parent()
          .parent()
          .find(".block2-name")
          .html();
        $(this).on("click", function () {
          swal(nameProduct, "is added to wishlist !", "success");
        });
      });
    </script>

    <script>
      $(document).ready(function () {
        $("#tableContent").DataTable();
      });
    </script>
    <!--===============================================================================================-->
    <script src="/users/js/main.js"></script>
  </body>
</html>
